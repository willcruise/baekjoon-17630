T = int(input())
q = []
for i in range(T):
  q.append(int(input()))
  
for i in range(T):
  claim = q[i]
  binary = bin(claim-1)
  steps = len(binary)-1
  print(steps)
  print(1, 1)

  binlist = list(binary)
  binlist.pop(0)
  binlist.pop(0)

  for p in range(1, steps -1):
    if binlist[p] == '1': print(1,p+1)
    else: print(2,p+1)
  
  print(1,steps)

