T = int(input())
q = []
for i in range(T):
  q.append(int(input()))

def boundadd(line, bound):
  res = 0
  if bound[0] == bound[1]:
    res = line[bound[0]-1]
  else:
    for i in range(bound[0]-1, bound[1]):
      res += line[i]
  return res

for i in range(T):
  claim = q[i]
  steps = len(bin(claim))-1
  operations = []
  line = [1]

  for i in range(steps):
    operations.append([1, i+1])
  


  print(steps)
  for i in operations:
    a, b = i
    print(a, b)



